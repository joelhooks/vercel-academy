{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2022",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"paths": {
			"@payload-config": ["./src/payload.config.ts"],
			"@/*": ["./src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
